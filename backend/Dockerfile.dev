# Make sure RUBY_VERSION matches the Ruby version in .ruby-version and Gemfile
ARG RUBY_VERSION=3.2.4
FROM registry.docker.com/library/ruby:$RUBY_VERSION-slim

# Rails app lives here
WORKDIR /rails

# Set development environment
ENV RAILS_ENV="development" \
    BUNDLE_PATH="/usr/local/bundle"

# Install packages needed for development
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
    build-essential \
    git \
    libpq-dev \
    libvips \
    pkg-config \
    curl \
    postgresql-client \
    vim \
    && rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Create a non-root user
RUN useradd rails --create-home --shell /bin/bash

# Create necessary directories and set permissions
RUN mkdir -p /usr/local/bundle tmp/pids log storage && \
    touch log/development.log && \
    chown -R rails:rails /usr/local/bundle /rails

# Copy dependency files first (for better Docker layer caching)
COPY --chown=rails:rails Gemfile Gemfile.lock ./

# Switch to rails user for bundle install
USER rails:rails

# Install application gems
RUN bundle install && \
    bundle clean --force

# Copy application code
COPY --chown=rails:rails . .

# Precompile bootsnap code for faster boot times
RUN bundle exec bootsnap precompile --gemfile

# Expose port
EXPOSE 3000

# Start the server by default
CMD ["bash", "-c", "chown -R rails:rails /usr/local/bundle && bundle install && ./bin/rails db:prepare && ./bin/rails server -b 0.0.0.0"]